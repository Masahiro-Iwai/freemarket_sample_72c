= render 'share/header'

.card-content
  .card-content_main
    .card-content_main_text
      = 'クレジットカード情報入力'
    .card-content_main_box
      = form_with url: pay_card_index_path, method: :post, html: { name: "inputForm" } do |f|
        .card-content_main_box_top
          .label
            = f.label :number, 'カード番号'
          %span.indispensable
            = '必須'
        .card-content_main_box_bottom
          = f.text_field :number, placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        .card-content_main_box_top
          .label
            = f.label :exp_month, '有効期限'
          %span.indispensable
            = '必須'
        .card-content_main_box_bottom
          .select_half
            = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , id: 'exp_month'
            = '月'
          .select_half
            = f.select :exp_year, [["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , id: 'exp_year'
            = '年'
        .card-content_main_box_top
          .label
            = f.label :cvc, 'セキュリティーコード'
          %span.indispensable
            = '必須'
        .card-content_main_box_bottom
          = f.text_field :cvc, placeholder: "カード背面4桁もしくは3桁の番号" ,maxlength: "4", id: "cvc"
        #card_token
          = submit_tag "追加する", id: "token_submit"
