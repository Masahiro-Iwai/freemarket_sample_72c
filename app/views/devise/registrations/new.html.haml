%h2 会員情報入力
= form_for(@user, url: user_registration_path) do |f|
  .error_messages
    = render "devise/shared/error_messages", resource: @user
  
  .field
    .label
      = f.label :nickname, 'ニックネーム'
    .text_field
      = f.text_field :nickname, placeholder: "例) YAMADA", autofocus: true, autocomplete: "nickname"

  .field
    .label
      = f.label :lastname, '氏名(全角)'
    .text_field
      = f.text_field :lastname, placeholder: "例) 山田", autocomplete: "lastname"
      = f.text_field :firstname, placeholder: "例) 太郎", autocomplete: "firstname"

  .field
    .label
      = f.label :lastname_kana, '氏名カナ(全角)'
    .text_field
      = f.text_field :lastname_kana, placeholder: "例) ヤマダ", autocomplete: "lastname_kana"
      = f.text_field :firstname_kana, placeholder: "例) タロウ", autocomplete: "firstname_kana"

  .field
    .label
      = f.label :birthday, '生年月日'
    .date_select
      != sprintf(f.date_select(:birthday, prompt: "--", use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'

  .field
    .label
      = f.label :email, 'メールアドレス'
    .email_field
      = f.email_field :email, placeholder: "PC・携帯どちらでも可", autocomplete: "email"

  .field
    .label
      = f.label :password, 'パスワード'
    .password_field
      = f.password_field :password, placeholder: "7文字以上の半角英数字"

  .field
    .label
      = f.label :password_confirmation, 'パスワード再入力'
    .password_field
      = f.password_field :password_confirmation, placeholder: "7文字以上の半角英数字"

  .actions
    = f.submit "次へ進む"
